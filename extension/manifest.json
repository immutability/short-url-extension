{
  "manifest_version": 2,
  "name": "Short Item URL for eBay",
  "description": "Simple URL shortener for eBay listings, using no 3rd party service but eBay itself.",
  "version": "0.1",
  "icons": {
    "48": "logo_48.png",
    "128": "logo_128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "icon_19.png",
      "38": "icon_38.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
	"declarativeContent",
	"clipboardRead",
	"clipboardWrite"
  ]
}